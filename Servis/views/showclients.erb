          <td><%= row['auto'] %></td>
          <td><%= row['modelauto'] %></td>
          <td><%= row['number_auto'] %></td>
          <td><%= row['km'] %></td>
          <td><%= row['ecu'] %></td>
          <td><%= row['deffect'] %></td>
        </tr>

      <% end %>
    </tbody>

</table>