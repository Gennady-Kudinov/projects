<h4>Страница пользователя для автосервиса</h4>
						
<table class="table table-striped">
  <thead>
    <tr>
      <th>Марка а/м</th>
      <th>Модель а/м</th>
      <th>Гос Номер а/м</th>
      <th>Пробег</th>
      <th>Идентификатор</th>
      <th>Неисправность<th>
      <th>Телефон</th>
    </tr>
  </thead>

    <tbody>

      <% @results.each do |row| %>

        <tr <%= "style='background-color: green; color: grey;'" if row == @results.first %>>
          <td><%= row['Auto'] %></td>
          <td><%= row['Nodelauto'] %></td>
          <td><%= row['Number_auto'] %></td>
          <td><%= row['Km'] %></td>
          <td><%= row['Ecu'] %></td>
          <td><%= row['Deffect'] %></td>
          <td><%= row['phone'] %></td>
        </tr>

      <% end %>
    </tbody>

</table>